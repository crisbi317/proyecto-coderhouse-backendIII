{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Documentación API",
    "description": "API para la gestión de usuarios"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Obtener todos los usuarios",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de usuarios obtenida exitosamente",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Crear un nuevo usuario",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuario creado exitosamente"
          }
        }
      }
    },
    "/api/users/{id}": {
      "put": {
        "tags": ["Users"],
        "summary": "Actualizar un usuario",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario actualizado exitosamente"
          }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Eliminar un usuario",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario eliminado exitosamente"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "64f1c9a2b5e8f2a1c9e12345"
        },
        "first_name": {
          "type": "string",
          "example": "Juan"
        },
        "last_name": {
          "type": "string",
          "example": "Pérez"
        },
        "email": {
          "type": "string",
          "example": "juan@mail.com"
        },
        "role": {
          "type": "string",
          "example": "user"
        }
      }
    },
    "UserInput": {
      "type": "object",
      "required": ["first_name", "last_name", "email"],
      "properties": {
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    }
  }
}